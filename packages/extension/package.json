{
  "name": "vscode-power-ts-plugin",
  "version": "0.0.1",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build:dts": "tsc",
    "build:bundle": "esno ./scripts/build.ts",
