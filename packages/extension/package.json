  "license": "MIT",
  "dependencies": {
    "@power-ts-plugin/shared": "workspace:*",
    "@power-ts-plugin/plugin": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^17.0.23",
    "@types/vscode": "^1.66.0",
    "esbuild": "^0.14.34",
    "esno": "^0.14.1",
    "typescript": "^4.6.3"
  }
}
